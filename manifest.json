{
  "manifest_version": 2,

  "name": "PayPal OAuth example",
  "description": "This extension demonstrates using PayPal OAuth in a chrome extension",
  "version": "1.0",

  "background": {
        "scripts": ["background.bundle.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "identity",
    "storage",
    "https://www.paypal.com/",
    "https://api.paypal.com/"
  ]
}
